extends layout

block head
        script(type="text/javascript").

          function checkData(){
            console.log("checking data");
               var inputCode = $('#myCode').val();
                if (inputCode == '') {
                    hideLoader();
                }
                else{
                  showLoader();
                }
          }

block content
  h1 IDEA Box
  p.lead Feel free to type suggestions , ideas, views etc etc....
  h3
  | 
  form(method='POST' onclick="checkData()")
    input(type='hidden', name='_csrf' , value=_csrf)
    .form-group.row
      .col-md-3.margintop8
        input#myCode.form-control(type='text', name='name', placeholder='Name',   autocomplete='name', style='border: 2px solid #000; border-radius: 25px; padding: 20px;  width: 100%;height: 20px;')
      .col-md-3.margintop8
        input#myCode.form-control(type='text', name='email', placeholder='Email',autocomplete='name',  style='border: 2px solid #000; border-radius: 25px; padding: 20px;  width: 100%;height: 20px;')
      .col-md-3.margintop8
          select#myCode.form-control(name='gender',  style='border: 2px solid #000; border-radius: 25px; padding: 8px 20px 8px 20px;  width: 100%;')
            each val in ['Other' , 'Female' , 'Male']
              option=val
      .col-md-3.margintop8
        input#myCode.form-control(type='text', name='location', placeholder='Location',   style='border: 2px solid #000; border-radius: 25px; padding: 20px;  width: 100%;height: 20px;')
      .col-md-12.margintop8
        textarea.form-control(type='text', name='message', placeholder='Enter your presence', autofocus='autofocus',  required='required', style='border: 2px solid #000; border-radius: 25px; padding: 20px;  width: 100%;height: 120px;')
      .col-md-12.margintop8
        button.btn.btn-primary(type='submit', style='border: 2px; border-radius: 25px; padding: 10px; width: 100%' )
          i.fas.fa-hammer
          | GO
